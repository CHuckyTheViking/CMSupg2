@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Review>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}


@{
	var allReviewPosts = Umbraco.Content(1091)
    .ChildrenOfType("reviewPost")
    .Where(x => x.IsVisible())
    .OrderByDescending(x => x.CreateDate);

}

<head>
    <link rel="stylesheet" href="/css/style.css" />
</head>

    <div class="container"> 
        @foreach (var item in allReviewPosts)
        
            {
                var image = item.Value<IPublishedContent>("reviewImage");
            
                <a href="@item.Url()" class="list-group-item list-group-item-action m-2" aria-current="true">
                    <div style="display:flex;">
                          <img class="mt-2 mb-2" style="width: 275px; height: 400px; margin-left:2rem;" src="@image.Url()"/>
                          <div style="margin-left:2rem;">
                            <h2 class="mt-3">@item.Value("reviewTitle")</h2>
                            <small>@item.Value("reviewDate")</small>
                            <p class="ml-1 mb-4 mt-5">@item.Value("reviewContent")</p>
                          </div>
                    </div>
                    
                    
              </a>  
  
            }
    </div>



